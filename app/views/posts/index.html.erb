<p id="notice"><%= notice %></p>

<h1>Liste des livres</h1>

<table border="1" width="70%">
  <thead>
    <tr>
      <th>Id</th>
      <th>Titre</th>
      <th>Auteur</th>
      <th>Isbn</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td> 
        <td><%= post.titre %></td>
        <td><%= post.auteur %></td>
        <td><%= post.isbn %></td>
        <td><%= link_to 'Detail', post %></td>
        <td><%= link_to 'Modifier', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy',post,method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouveau Livre', new_post_path %>

